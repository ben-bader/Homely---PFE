### Register a new user
@baseUrl = http://localhost:8082/api

POST {{baseUrl}}/auth/register
Content-Type: application/json

{
    "email": "testuser@example.com",
    "password": "password",
    "name": "Test User",
    "phone": "1234567890",
    "role": "CLIENT"
}
###
POST {{baseUrl}}/auth/register
Content-Type: application/json

{
    "email": "testuser2@example.com",
    "password": "password",
    "name": "Test User",
    "phone": "1234567890",
    "role": "ADMIN"
}

###

# @name auth
POST {{baseUrl}}/auth/login
Content-Type: application/json

{
  "email": "testuser@example.com",
  "password": "password"
}

###

# Set token variable from login response
@token = {{auth.response.body.token}}

###

GET {{baseUrl}}/test/whoami
Authorization: Bearer  {{token}}

###
POST {{baseUrl}}/profile
Content-Type: application/json
Authorization: Bearer {{token}}

{
  "bio": "Passionate traveler and real estate enthusiast looking for a cozy home.",
  "address": "123 Main Street, Casablanca, Morocco",
  "verified": false,
  "idDocumentUrl": "https://storage.homely.com/docs/id-99.pdf"
}
###

# Create an apartment
POST {{baseUrl}}/properties
Content-Type: application/json
Authorization: Bearer {{token}}

{
  "title": "Beautiful 2BR Apartment in Downtown",
  "description": "Spacious apartment with modern amenities, located in the heart of the city. Features include hardwood floors, updated kitchen, and large windows with natural light.",
  "price": 150000,
  "address": "123 Main Street, Casablanca, Morocco",
  "listingType": "RENT",
  "longitude": -7.589843,
  "latitude": 33.573110,
  "propertyType": "APARTMENT",
  "currency": "USD",
  "status": "AVAILABLE",
  "apartment": {
    "bedrooms": 2,
    "bathrooms": 1,
    "floor": 5,
    "hasElevator": true
  }
}

###

# Get all properties
GET {{baseUrl}}/properties
Authorization: Bearer {{token}}

###

# Search properties
GET {{baseUrl}}/properties/search?listingType=RENT
Authorization: Bearer {{token}}

